@model UsersPageViewModel

@{
    ViewBag.Title = "Users";
}

<div class="container mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }
    <h2>Users</h2>
   
    <form method="get" asp-action="LoadUsers">
        <button type="submit" class="btn btn-primary mb-3">
            Load Users
        </button>
    </form>

    @if (Model.Users != null && Model.Users.Any())
    {        
        <form method="post" asp-action="SaveAll">

            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Website</th>
                        <th>Address</th>
                        <th>Note</th>
                        <th>Password</th>
                        <th>Is Active</th>
                    </tr>
                </thead>

                <tbody>                    
                    
                    @for (int i = 0; i < Model.Users.Count; i++)
                    {
                        var u = Model.Users[i];
                        

                        <tr>                            
                            <td>
                                @u.Name
                                <input type="hidden" asp-for="Users[@i].Name" />
                                <span asp-validation-for="Users[@i].Name" class="text-danger"></span>
                            </td>
                            <td>
                                @u.Username
                                <input type="hidden" asp-for="Users[@i].Username" />
                                <span asp-validation-for="Users[@i].Username" class="text-danger"></span>
                            </td>
                            <td>
                                @u.Email
                                <input type="hidden" asp-for="Users[@i].Email" />
                                <span asp-validation-for="Users[@i].Email" class="text-danger"></span>
                            </td>
                            <td>
                                @u.Phone
                                <input type="hidden" asp-for="Users[@i].Phone" />
                                <span asp-validation-for="Users[@i].Phone" class="text-danger"></span>
                            </td>
                            <td>
                                @u.Website
                                <input type="hidden" asp-for="Users[@i].Website" />
                                <span asp-validation-for="Users[@i].Website" class="text-danger"></span>
                            </td>
                           
                            <td>
                                @u.Street, @u.Suite, @u.City, @u.Zipcode, @u.Lat, @u.Lng
                                <input type="hidden" asp-for="Users[@i].Street" />
                                <input type="hidden" asp-for="Users[@i].Suite" />
                                <input type="hidden" asp-for="Users[@i].City" />
                                <input type="hidden" asp-for="Users[@i].Zipcode" />
                                <input type="hidden" asp-for="Users[@i].Lat" />
                                <input type="hidden" asp-for="Users[@i].Lng" />
                                <span asp-validation-for="Users[@i].Lat" class="text-danger"></span>
                                <span asp-validation-for="Users[@i].Lng" class="text-danger"></span>
                            </td>
                           
                            <td>
                                <input class="form-control" asp-for="Users[@i].Note" />
                            </td>

                            <td>
                                <input class="form-control" asp-for="Users[@i].Password" type="password" required />
                                <span asp-validation-for="Users[@i].Password" class="text-danger"></span>
                            </td>

                            <td class="text-center">
                                <input asp-for="Users[@i].IsActive" type="checkbox" />
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

            <button type="submit" class="btn btn-success mt-3">
                Save All
            </button>

        </form>
    }
    else
    {
        <p>No users loaded yet.</p>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}